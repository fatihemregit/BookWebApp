@model BookWebApp.Models.Auth.DeleteRoleViewModel
@{
    ViewData["Title"] = "DeleteRole";
}

<h1>Delete Role</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteRolePost" asp-controller="Role" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleNames" value="" />
